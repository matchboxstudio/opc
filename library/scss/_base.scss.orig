/*********************
LAYOUT & GRID STYLES
*********************/

.wrap {
	width: 100%;
	margin: 0 auto;
	
	@include breakpoint($tablet, $no-query: '.no-query') {
		width: 96%;
		}// * BP
	
}

.site-width-wrap {
	width: 100%;
	max-width: $site-width;
	margin: 0 auto;
	position: relative;
	float: none;
	}

/*********************
LINK STYLES
*********************/

a, a:visited {
	color: $link-color;
	@include hovers();

	/* on hover */
	&:hover, &:focus {
		color: $link-hover;
	}

	/* on click */
	&:active {

	}

	/* mobile tap color */
	&:link {
		/*
		this highlights links on iPhones/iPads.
		so it basically works like the :hover selector
		for mobile devices.
		*/
		-webkit-tap-highlight-color : rgba( 0, 0, 0, 0.3 );
	}
}

/******************************************************************
H1, H2, H3, H4, H5 STYLES
******************************************************************/

h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5 {
	text-rendering: optimizelegibility;
	font-weight: 500;
	margin: 0;
	line-height: 1;
	letter-spacing: .1em;
	/*
	if you're going to use webfonts, be sure to check your weights
	http://css-tricks.com/watch-your-font-weight/
	*/

	/* removing text decoration from all headline links */
	a {
		text-decoration: none;
	}
}

h1, .h1 {
	@include rem-fallback(font-size, 2);
	text-transform: uppercase;
	font-weight: 300;
	color: $brown;
	margin: 0 0 $marginquarter;
}

h2, .h2 {
	@include rem-fallback(font-size, 1.25);
	font-style: italic;
	font-weight: 400;
	color: $black;
}

h3, .h3 {
	@include rem-fallback(font-size, 1.125);
}

h4, .h4 {
	@include rem-fallback(font-size, 1.1);
	font-weight: 700;
}

h5, .h5 {
	@include rem-fallback(font-size, .846);
	text-transform: uppercase;
	letter-spacing: 2px;
}



